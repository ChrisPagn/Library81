@* Library81.Client/Pages/Genres/GenreDialog.razor *@
@using Library81.Shared.DTOs
@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="localGenre.Name" Label="Nom du genre" Required="true"
                      RequiredError="Le nom est requis" Class="mb-4" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Annuler</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">
            @(Genre == null ? "Créer" : "Enregistrer")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public GenreDto? Genre { get; set; }

    private GenreDto localGenre = new();

    protected override void OnInitialized()
    {
        if (Genre != null)
        {
            localGenre = new GenreDto
            {
                GenreId = Genre.GenreId,
                Name = Genre.Name
            };
        }
    }

    void Submit()
    {
        if (!string.IsNullOrWhiteSpace(localGenre.Name))
        {
            MudDialog.Close(DialogResult.Ok(localGenre));
        }
    }

    void Cancel() => MudDialog.Cancel();
}

