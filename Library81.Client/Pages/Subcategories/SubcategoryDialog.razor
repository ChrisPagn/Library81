@* Library81.Client/Pages/Subcategories/SubcategoryDialog.razor *@
@using Library81.Shared.DTOs
@using MudBlazor

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="localSubcategory.Name" Label="Nom" Required="true"
                      RequiredError="Le nom est requis" Class="mb-4" />

        <MudSelect @bind-Value="localSubcategory.CategoryId"
                   Label="Catégorie parente"
                   Required="true"
                   RequiredError="La catégorie est requise"
                   Class="mb-4">
            <MudSelectItem Value="@((int?)null)">-- Sélectionner une catégorie --</MudSelectItem>
            @foreach (var category in Categories)
            {
                <MudSelectItem Value="@((int?)category.CategoryId)">@category.Name</MudSelectItem>
            }
        </MudSelect>

        <MudTextField @bind-Value="localSubcategory.Description" Label="Description" Lines="3" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Annuler</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit">
            @(Subcategory == null ? "Créer" : "Enregistrer")
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public SubcategoryDto? Subcategory { get; set; }
    [Parameter] public List<CategoryDto> Categories { get; set; } = new();

    private SubcategoryDto localSubcategory = new();

    protected override void OnInitialized()
    {
        if (Subcategory != null)
        {
            localSubcategory = new SubcategoryDto
            {
                SubcategoryId = Subcategory.SubcategoryId,
                CategoryId = Subcategory.CategoryId,
                Name = Subcategory.Name,
                Description = Subcategory.Description,
                CategoryName = Subcategory.CategoryName
            };
        }
    }

    void Submit()
    {
        if (!string.IsNullOrWhiteSpace(localSubcategory.Name) && localSubcategory.CategoryId.HasValue)
        {
            MudDialog.Close(DialogResult.Ok(localSubcategory));
        }
    }

    void Cancel() => MudDialog.Cancel();
}

